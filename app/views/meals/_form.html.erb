<%=form_for @meal do |meal| %>
	<div class="field">
		<%= meal.label :name %> <br>
		<%= meal.text_field :name %>
	</div>
	<div class="field">
		<%= meal.label :description %> </br>
		<%= meal.text_area :description %>
	</div>
	<div class="field">
		<%= meal.label :servings %></br>
		<%= meal.number_field :servings %>
	</div> <br>
	<%= meal.submit "Save" %>
<% end %>
<br>

<ul>
<%= @meal.ingredients.each do |ingredient| %>
	<li> <%= ingredient[:name] %> </li>
<% end %>
</ul>


<table>
	
	<% Ingredient.all.each do |ingredient| %>
	<tr>
		<td align=center><%= ingredient.name %></td>
		<td align=center>
			<%= link_to "Add", edit_meal_path(ingredient) %>
		</td>

	</tr>
	<% end %>
</table>




